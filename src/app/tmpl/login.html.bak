<html>
<body>
<div layout="column" flex-xs flex-gt-xs="300" ng-cloak layout-align="center center" style="height:100%">
  <md-card  md-theme="default" >
 <md-card-content >
 <form name="loginForm">
   <md-input-container>
     <label>Username</label>
     <input required name="username" ng-model="vm.username" type="text">
	  <div ng-message="loginForm.username.$error" role="alert" multiple>
              <div ng-message="required" class="my-message">Please enter Username.</div>
      </div>
   </md-input-container>
   <md-input-container>
     <label>Password</label>
     <input required name="password" ng-model="vm.password" type="password">
	 <div ng-messages="loginForm.password.$error" role="alert" multiple>
              <div ng-message="required" class="my-message">Please enter Password.</div>
      </div>
   </md-input-container>
</form>
 </md-card-content>

 <md-card-actions layout="row" layout-align="end center">
   <md-button class="btn1" ng-click="vm.doLogin()" ui-sref="main.home">Login</md-button>&nbsp;&nbsp;
 </md-card-actions>
  </md-card >
</div>
</body>
</html>